    'PatientName',
    'PatientSex',
    'PatientWeight',
    'PatientTelephoneNumbers',
    'PercentPhaseFieldOfView',
    'PerformedProcedureStepID',
    'PerformedProcedureStepDescription',
    'PerformedProcedureStepStartDate',
